@model Crud_Firebase.Models.Contacto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="panel panel-primary">
    <div class="panel panel-heading">
        <h4>Editar Contacto</h4>
    </div>
    <div class="panel-body">
        <form action="@Url.Action("Edit", "Mantenedor")" method="post">

            <input type="hidden" name="idContacto" value="@Html.DisplayTextFor(x => x.idContacto)" />
            <div class="form-group">
                <label>Nombre: </label>
                <input class="form-control" type="text" name="Nombre" value="@Html.DisplayTextFor(x => x.Nombre)" />
            </div>

            <div class="form-group">
                <label>Correo: </label>
                <input class="form-control" type="text" name="Correo" value="@Html.DisplayTextFor(x => x.Correo)" />
            </div>

            <div class="form-group">
                <label>Telefono: </label>
                <input class="form-control" type="text" name="Telefono" value="@Html.DisplayTextFor(x => x.Telefono)" />
            </div>

            <hr />
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a class="btn btn-danger" href="@Url.Action("Index", "Mantenedor")">Volver</a>
        </form>

    </div>

</div>

